<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="techanand.apps.stockcalculator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="techanand.apps.stockcalculator.StockCalculatorActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="techanand.apps.stockcalculator.SettingsActivity"
            android:label="@string/app.settings_label"
            android:parentActivityName="techanand.apps.stockcalculator.StockCalculatorActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="techanand.apps.stockcalculator.StockCalculatorActivity" />
        </activity>
        <activity
            android:name="techanand.apps.stockcalculator.AboutActivity"
            android:label="@string/app.about_label"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="techanand.apps.stockcalculator.StockCalculatorActivity" />
        </activity>
        <activity android:name="techanand.apps.stockcalculator.TransactionActivity"
            android:label="@string/app.transactions_label"
            android:parentActivityName="techanand.apps.stockcalculator.StockCalculatorActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="techanand.apps.stockcalculator.StockCalculatorActivity" />
        </activity>
    </application>

</manifest>