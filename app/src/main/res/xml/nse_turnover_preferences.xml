<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="@string/prefs.exchange.nsecharges.delivery_title"
        android:key="@string/prefs.exchange.nsecharges.delivery_key"
        android:defaultValue="@string/prefs.exchange.nsecharges.delivery_default"
        android:inputType="numberDecimal"/>
    <EditTextPreference android:title="@string/prefs.exchange.nsecharges.intraday_title"
        android:key="@string/prefs.exchange.nsecharges.intraday_key"
        android:defaultValue="@string/prefs.exchange.nsecharges.intraday_default"
        android:inputType="numberDecimal"/>
    <EditTextPreference android:title="@string/prefs.exchange.nsecharges.futures_title"
        android:key="@string/prefs.exchange.nsecharges.futures_key"
        android:defaultValue="@string/prefs.exchange.nsecharges.futures_default"
        android:inputType="numberDecimal"/>
    <EditTextPreference android:title="@string/prefs.exchange.nsecharges.options_title"
        android:key="@string/prefs.exchange.nsecharges.options_key"
        android:defaultValue="@string/prefs.exchange.nsecharges.options_default"
        android:inputType="numberDecimal"/>
    <PreferenceCategory android:title="@string/prefs.exchange.nsecharges.currency_title">
        <EditTextPreference android:title="@string/prefs.exchange.nsecharges.currency_futures_title"
            android:key="@string/prefs.exchange.nsecharges.currency_futures_key"
            android:defaultValue="@string/prefs.exchange.nsecharges.currency_futures_default"
            android:inputType="numberDecimal"/>
        <EditTextPreference android:title="@string/prefs.exchange.nsecharges.currency_options_title"
            android:key="@string/prefs.exchange.nsecharges.currency_options_key"
            android:defaultValue="@string/prefs.exchange.nsecharges.currency_options_default"
            android:inputType="numberDecimal"/>
    </PreferenceCategory>
    <EditTextPreference android:title="@string/prefs.exchange.nsecharges.commodities_title"
        android:key="@string/prefs.exchange.nsecharges.commodities_key"
        android:defaultValue="@string/prefs.exchange.nsecharges.commodities_default"
        android:inputType="numberDecimal"/>
</PreferenceScreen>