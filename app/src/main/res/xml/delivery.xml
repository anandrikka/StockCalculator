<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference android:title="@string/prefs.brokerage_use_flat_charges_title"
        android:key="@string/prefs.brokerage.delivery_use_flat_charges_key" />
    <EditTextPreference android:title="@string/prefs.brokerage.flat_charges_title"
        android:key="@string/prefs.brokerage.delivery_flat_charges_key"
        android:inputType="numberDecimal"
        android:defaultValue="@string/prefs.brokerage.delivery_flat_charges_default"/>
    <EditTextPreference android:title="@string/prefs.brokerage_percent_title"
        android:inputType="numberDecimal"
        android:key="@string/prefs.brokerage.delivery_percent_key"
        android:defaultValue="@string/prefs.brokerage.delivery_percent_default"/>
</PreferenceScreen>